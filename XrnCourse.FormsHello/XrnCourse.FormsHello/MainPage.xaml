<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XrnCourse.FormsHello"
             x:Class="XrnCourse.FormsHello.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand">
        <!-- Place new controls here -->
        <Label x:Name="lblWelcome"
           Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="Center" />
        <Button x:Name="btnAlertPage" Text="Go to alert page"
                Clicked="btnAlertPage_Clicked"></Button>
        <Button x:Name="btnActionSheet" Text="Actions"
                Clicked="btnActionSheet_Clicked"></Button>
    </StackLayout>

</ContentPage>
